{
    "name": "tsukiro/payment-gateways-library",
    "description": "Esta librería unifica y simplifica la implementación de las pasarelas de pago de mercado pago, webpay y flow dejandolas en un único marco de trabajo para su integración",
    "type": "library",
    "require": {
        "transbank/transbank-sdk": "^5.1",
        "mercadopago/dx-php": "^3.8",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.5",
        "phpunit/php-code-coverage": "^10.1"
    },
    "license": "proprietary",
    "autoload": {
        "psr-4": {
            "Raion\\Gateways\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Raion\\Gateways\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "bastian vergara",
            "email": "bastian@raion.cl"
        }
    ],
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test:coverage": "vendor/bin/phpunit --coverage-html coverage"
    }
}
